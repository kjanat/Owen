{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "no-console": [
      "warn"
    ],
    "max-len": [
      "warn",
      {
        "code": 120
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "examples/**/*.js"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": [
        "src/**/*.js"
      ],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "docs/"
  ]
}
